<Page x:Class="MenshakovaBytService.Pages.AuthPages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenshakovaBytService.Pages.AuthPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Width="250"
                    VerticalAlignment="Center">
            <GroupBox Header="Логин:"
                      Margin="5">
                <TextBox Name="TxbLogin"
                         MaxLength="25"/>
            </GroupBox>
            <GroupBox Header="Пароль:"
                      Margin="5">
                <PasswordBox Name="PsbPassword"
                             MaxLength="25"/>
            </GroupBox>
            <Button Name="BtnAuthorize"
                    Width="150"
                    Height="20"
                    Content="Войти"
                    Margin="5"
                    Click="BtnAuthorize_Click"/>
        </StackPanel>
    </Grid>
</Page>
